<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"

    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/main_IMG_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <GridLayout
        android:id="@+id/Grid_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:rowCount="7"
        android:columnCount="3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_row="0"
            android:layout_column="2">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/rock3"
                android:layout_width="135dp"
                android:layout_height="112dp"
                android:src="@xml/rock"/>

        <LinearLayout
            android:id="@+id/main_IMG_hearts"
            android:layout_width="100dp"
            android:layout_height="50dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_IMG_heart1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@xml/ic_heart"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_IMG_heart2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                app:srcCompat="@xml/ic_heart"
              />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/main_IMG_heart3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@xml/ic_heart"
               />

        </LinearLayout>

        </FrameLayout>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/Move_car_to_the_left"
            android:layout_row="6"
            android:layout_column="0"
            android:backgroundTint="@color/teal_200"
            android:contentDescription="@string/move_car_left_description"
            android:rotation="180"
            android:layout_marginStart="20dp"
            app:srcCompat="@xml/left_button" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/Move_car_to_the_right"
            android:layout_row="6"
            android:layout_column="2"
            android:layout_marginStart="60dp"
            android:background="@color/teal_200"
            android:contentDescription="@string/move_car_right_description"
            app:srcCompat="@xml/right_button" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_car0"
            android:layout_marginStart="20dp"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:layout_row="5"
            android:layout_column="0"
            android:src="@xml/ic_car" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_car1"
            android:layout_marginStart="20dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="5"
            android:layout_column="1"
            android:src="@xml/ic_car" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_car2"
            android:layout_marginStart="20dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="5"
            android:layout_column="2"
            android:src="@xml/ic_car" />





       <com.google.android.material.imageview.ShapeableImageView
           android:id="@+id/rock13"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_width="135dp"
            android:layout_height="112dp"
            android:src="@xml/rock"
         />

